@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var returnUrl = ViewData["ReturnUrl"];
}
@model ViewModels.LoginViewModel;
@addTagHelper *, MVC

<div class="background-container background-container-light" style="width:40%">
    @using (Html.BeginForm("AttemptLogin", "Account", FormMethod.Post, new {  @id = "submitLoginForm" }))
    {
        @Html.AntiForgeryToken()
        <div>
            <label class="w-100">
                Username / Email
                <TextBox id="User" required="required" name="User"></TextBox>
            @Html.ValidationMessageFor(Model => Model.User, "", new { @onsubmit="return false;", @class = "text-danger" })
                </label>
        </div>

        <div>
            <label class="w-100">
                Password
                <TextBox id="Password" required="required" name="Password" ></TextBox>
            @Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "text-danger" })
            </label>
        </div>

        @Html.Hidden("ReturnUrl", ViewData["ReturnUrl"])

        <div class="my-1" id="login-btn">
            <SubmitButton>Login</SubmitButton>
        </div>
    }
</div>

<script src="~/js/Scripts/Views/Home/Login.js"></script>